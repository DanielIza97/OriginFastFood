<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartShopping">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginBottom="40px"
            android:src="@mipmap/logo_4" />

        <TextView
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:text="@string/llevamos_tus_compras"
            android:textSize="50px"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="50sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Selecciona tu paÃ­s, ciudad y sector para empezar a comprar"/>

        <RelativeLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:background="@drawable/spinner_item"
                android:layout_marginBottom="2dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/flecha_abajo" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">
            <Spinner
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:background="@drawable/spinner_item"
                android:layout_marginBottom="2dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/flecha_abajo" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp">
            <Spinner
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:background="@drawable/spinner_item"
                android:layout_marginBottom="2dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/flecha_abajo" />
        </RelativeLayout>


        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_redondeado_azul"
            android:onClick="MainMenushopping"
            android:text="EMPEZAR A COMPRAR"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>