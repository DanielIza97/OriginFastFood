<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/fondo_azul2"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#d8000000"
        android:gravity="center">

        <ImageView
            android:layout_width="183dp"
            android:layout_height="183dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/image_circulo"
            android:padding="40dp"
            android:src="@mipmap/logo_4"></ImageView>


        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_redondeado_white"
            android:onClick="LoginActivity"
            android:text="Iniciar Sesión"
            android:textSize="16dp"></Button>

        <Button
            android:id="@+id/button_login_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_redondeado_azul"
            android:elevation="5dp"
            android:onClick="Menuopciones"
            android:textColor="@color/colorWhite"
            android:text="Iniciar Sesión Facebook"
            android:textSize="16dp"></Button>

    </LinearLayout>
</RelativeLayout>